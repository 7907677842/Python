# Reverse vowels

class Solution:
    def reverseVowels(self, s: str) -> str:
        vowels=set('aeiou')
        s_list=list(s)
        right,left=0,len(s)-1
        if left<right:
            if s_list[left] not in vowels:
                left+=1
                continue
            if s_list[right] not in vowels:
                right-=-1
                continue
            s_list[left], s_list[right] = s_list[right], s_list[left]
            left += 1
            right -= 1
            return ''.join(s_list)
solution = Solution()
s = "hello"
print(solution.reverseVowels(s)) 
